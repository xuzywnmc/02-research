keywords = {Atom decomposition,Basis pursuit,Codebook,Dictionary,FOCUSS,Gain-shape VQ,K-SVD,K-means,Matching pursuit,Sparse representation,Training,Vector quantization},
number = {11},
pages = {4311--4322},
